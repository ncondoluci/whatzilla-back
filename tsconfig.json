{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"],
    "outDir": "./dist",
    "rootDir": "./src",     // Define la carpeta fuente como "src"
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "app.ts"],   
  "exclude": ["node_modules", "dist", "test"]
}
