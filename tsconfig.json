{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "rootDir": "./src",     // Apunta espec√≠ficamente a "src"
    "outDir": "./dist",     // Salida directa en "dist"
    "baseUrl": ".",         // Base para alias
    "paths": {
      "@/*": ["src/*"]      // Alias para "src/*"
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*.ts", "app.ts"],
  "exclude": ["node_modules", "dist", "test"]
}
